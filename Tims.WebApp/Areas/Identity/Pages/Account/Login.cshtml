@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AccountLayout";
}

<form id="account" class="form1" method="post">
    <div class="logo">
        <img id="logo" src="~/img/tivit.png">
    </div>
    <div class="form-group">
        <br>Inicie sesión mediante su cuenta organizativa</br>
        <input asp-for="Input.Email" class="form-control" id="email" placeholder="Ingrese su correo corporativo" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Input.Password" class="form-control" id="pwd" placeholder="Ingrese su contraseña" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label asp-for="Input.RememberMe">
            <input asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <button type="submit" id="btnIngresar" class="btn btn-primary">Ingresar</button>
</form>
<p class="text-center">
    <a class="" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
